<button class="soul-button bg-accent-600 hover:bg-accent-200 font-bold py-2 px-4 rounded cursor-pointer transform transition-transform duration-200 ease-in-out hover:scale-105 active:scale-95">
  Sell your soul ðŸ”¥
</button>

<script>
import { isMorallyBankrupt } from '../stores';

// Function to set the store to true when the button is clicked
function soldSoul() {
  isMorallyBankrupt.set(true);
}

// Wait for the DOM to be fully loaded before adding the event listener
document.addEventListener('DOMContentLoaded', () => {
  const soulButton = document.querySelector('.soul-button');
  if (soulButton) {
    soulButton.addEventListener('click', soldSoul);
  } else {
    console.error('Soul button not found');
  }
});
</script>
